
@{
    ViewData["Title"] = "Index";
}

<form method="post" asp-action="LogIn">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <h3>Log In Form</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="form-group">
                        <label class="col-form-label">E-Mail</label>
                        <input class="form-control" name="mail" required />
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Password</label>
                        <input class="form-control" name="Password" type="password" required />
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a class="btn btn-outline-info" asp-controller="Auth" asp-action="Register">რეგისტრაცია</a>
                <button style="float:right;" type="submit" class="btn btn-outline-primary">შესვლა</button>
            </div>
        </div>
    </div>
</form>

