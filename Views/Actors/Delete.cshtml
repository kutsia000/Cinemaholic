
@{
    ViewData["Title"] = "Delete";
}

@model Actor
<form method="post" asp-action="Add">
    <div class="col-sm-12 col-md-12 col-lg-12">
        <div class="row">
            <div class="col-sm-12 col-md-3 col-lg-3">
            </div>
            <div class="col-sm-12 col-md-9 col-lg-9">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="form-group">
                                <label class="col-form-label" asp-for="Name"></label>
                                <input class="form-control" name="name" asp-for="Name" required />
                            </div>
                            <div class="form-group">
                                <label class="col-form-label">გვარი</label>
                                <input class="form-control" name="lastname" asp-for="LastName" required />
                            </div>
                            <div class="form-group">
                                <label class="col-form-label">დაბადების თარიღი</label>
                                <input class="form-control" name="birthdate" asp-for="BirthDate" required />
                            </div>
                            <div class="form-group">
                                <label class="col-form-label">IMDB რეიტინგი</label>
                                <input class="form-control" name="imdbrating" asp-for="Rating" required />
                            </div>
                            <div class="form-group">
                                <label class="col-form-label">სურათის ლინკი</label>
                                <input class="form-control" name="imglink" asp-for="ImgPath" required />
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary" style="float:right;">შენახვა</button>
                        <a asp-controller="Actors" asp-action="Index">
                            უკან
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-3 col-lg-3">
            </div>
        </div>
    </div>
</form>

